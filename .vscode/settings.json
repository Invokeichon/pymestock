{
  "python.formatting.blackPath": "/Users/mitcheljimenez/ingsoft/lib/python3.8/site-packages/black",
  "python.formatting.provider": "black",
  "python.defaultInterpreterPath": "~/ingsoft/bin/python",
  "python.formatting.blackArgs": [
    "--line-length",
    "80"
  ],
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    ".vscode": true,
    "**/*.pyc": true
  },
  "workbench.editor.enablePreview": false,
  "editor.minimap.enabled": false,
}
